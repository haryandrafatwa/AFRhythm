<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/ic_logo"
            android:layout_centerHorizontal="true"
            android:id="@+id/logo_login" />

        <EditText
            android:id="@+id/et_email_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo_login"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorInputText"
            android:textSize="14sp"
            android:drawablePadding="30dp"
            android:drawableStart="@drawable/ic_mail_black_24dp"
            android:background="@drawable/bg_edittext" />

        <EditText
            android:id="@+id/et_password_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_email_login"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/colorInputText"
            android:textSize="14sp"
            android:drawablePadding="30dp"
            android:drawableStart="@drawable/ic_password"
            android:drawableEnd="@drawable/ic_visibility"
            android:background="@drawable/bg_edittext" />

        <TextView
            android:id="@+id/tv_lupa_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lupa Password?"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_below="@+id/et_password_login"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_masuk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_lupa_password"
            android:text="Masuk"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_btn_pink"
            android:layout_marginTop="40dp"
            android:padding="10dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:layout_below="@id/btn_masuk">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="belum punya akun?"
                android:layout_alignParentBottom="true" />

            <TextView
                android:id="@+id/tv_daftar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DAFTAR"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_toRightOf="@id/tv2"
                android:layout_marginStart="4dp"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>